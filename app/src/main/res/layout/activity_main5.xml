<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity5"
    android:background="@drawable/background">
    <TextView
        android:id="@+id/text"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="contact us"
        android:textSize="@dimen/_40sdp"
        android:gravity="center"
        android:textStyle="bold"
        />
 <ImageView
     android:id="@+id/facebookicon"
     android:layout_width="0dp"
     android:layout_height="0dp"
     app:layout_constraintTop_toBottomOf="@id/text"
     app:layout_constraintStart_toStartOf="parent"
     android:src="@drawable/facebook_739237"
     app:layout_constraintHeight_percent="0.2"
     app:layout_constraintWidth_percent="0.2"
 android:layout_marginStart="@dimen/_10sdp"
     />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
app:layout_constraintTop_toTopOf="@id/facebookicon"
        app:layout_constraintStart_toEndOf="@id/facebookicon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Bingebuster"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textStyle="bold"
        android:paddingStart="@dimen/_10sdp"
        />
<ImageView
    android:id="@+id/instgramicon"
    android:layout_width="0dp"
    android:layout_height="0dp"
    app:layout_constraintTop_toBottomOf="@id/facebookicon"
    app:layout_constraintStart_toStartOf="parent"
    android:src="@drawable/instagram_1077042"
    app:layout_constraintHeight_percent="0.2"
    app:layout_constraintWidth_percent="0.2"
    android:layout_marginStart="@dimen/_10sdp"
    />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/instgramicon"
        app:layout_constraintStart_toEndOf="@id/instgramicon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Bingebuster"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textStyle="bold"
        android:paddingStart="@dimen/_10sdp"
        />
    <ImageView
        android:id="@+id/gmainicon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_constraintTop_toBottomOf="@id/instgramicon"
        app:layout_constraintStart_toStartOf="parent"
        android:src="@drawable/gmail_104102"
        app:layout_constraintHeight_percent="0.2"
        app:layout_constraintWidth_percent="0.2"
        android:layout_marginStart="@dimen/_10sdp"
        />
    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintTop_toTopOf="@id/gmainicon"
        app:layout_constraintStart_toEndOf="@id/gmainicon"
        app:layout_constraintEnd_toEndOf="parent"
        android:text="Bingebuster@gmail.com"
        android:textSize="@dimen/_20sdp"
        android:layout_marginTop="@dimen/_35sdp"
        android:layout_marginStart="@dimen/_10sdp"
        android:textStyle="bold"
        android:paddingStart="@dimen/_10sdp"
        android:paddingEnd="@dimen/_5sdp"
        />
</androidx.constraintlayout.widget.ConstraintLayout>